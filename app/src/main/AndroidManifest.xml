<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HiltExmaple" >
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HiltExmaple" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".api.ui.activity.ApiDemoActivity"
            android:exported="true"
            android:label="API Demo"
            android:theme="@style/Theme.HiltExmaple" />
            
        <activity
            android:name=".api.ui.activity.UseCaseDemoActivity"
            android:exported="true"
            android:label="Use Case Demo"
            android:theme="@style/Theme.HiltExmaple" />
            
        <service
            android:name=".api.service.UserSyncService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>